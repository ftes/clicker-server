{
  "name": "clicker-student",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "devDependencies": {
    "cordova": "^6.4.0",
    "eslint": "^3.12.2",
    "eslint-plugin-react": "^6.8.0",
    "react-scripts": "0.8.5"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "cordova-icon": "^0.9.1",
    "enzyme": "^2.7.0",
    "eslint-plugin-jasmine": "^2.2.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "shx": "^0.2.2",
    "socket.io-client": "^1.7.2"
  },
  "scripts": {
    "start": "npm run cp-common && react-scripts start",
    "build": "npm run cp-common && react-scripts build",
    "eject": "react-scripts eject",
    "test": "npm run cp-common && react-scripts test --env=jsdom",
    "cp-common": "shx cp -r ../common src/",
    "start-cordova": "npm run build-cordova-prepare && cordova run",
    "build-cordova": "npm run build-cordova-prepare && cordova build",
    "build-cordova-release": "npm run build-cordova-prepare && cordova build --release",
    "build-cordova-prepare": "npm run build && shx rm -rf www/* && shx cp -r build/* www/ && cordova-icon",
    "postinstall": "cordova platform add android && cordova prepare"
  }
}
