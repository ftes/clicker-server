{
  "name": "clickr",
  "version": "0.1.0",
  "description": "Audience Response System for Schools",
  "main": "server/index.js",
  "scripts": {
    "start": "npm run start-teacher | npm run start-student | npm run start-server",
    "start-server": "cd server && npm start",
    "start-teacher": "cd teacher && REACT_APP_SERVER_PORT=4000 npm start",
    "start-student": "cd student && PORT=3001 npm start",
    "build": "npm run build-student && npm run build-teacher && npm run build-server",
    "build-teacher": "cd teacher && npm run build",
    "build-student": "cd student && npm run build-cordova",
    "build-server": "shx rm -rf server/public/teacher/* && shx cp -r teacher/build/* server/public/teacher"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ftes/clickr.git"
  },
  "author": "Fredrik Teschke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ftes/clickr/issues"
  },
  "homepage": "https://github.com/ftes/clickr#readme",
  "devDependencies": {
    "shx": "^0.2.2"
  }
}
