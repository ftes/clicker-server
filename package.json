{
  "name": "clickr",
  "version": "0.1.0",
  "description": "Audience Response System for Schools",
  "scripts": {
    "start": "npm run start-teacher | npm run start-student | npm run start-whiteboard | npm run start-server",
    "start-server": "cd server && npm start",
    "start-teacher": "cd teacher && npm start",
    "start-student": "cd student && npm run start-web",
    "start-whiteboard": "cd whiteboard && npm start",
    "docs": "npm run diagrams",
    "diagrams": "cd docs/diagrams && mermaid *.mmd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ftes/clickr.git"
  },
  "author": "Fredrik Teschke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ftes/clickr/issues"
  },
  "homepage": "https://github.com/ftes/clickr#readme",
  "devDependencies": {
    "mermaid": "^6.0.0",
    "shared-git-hooks": "^1.2.1"
  }
}
